<mvc:View controllerName="geinfo.geinfo.controller.View1"
    	xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:f='sap.f'
	xmlns:fb="sap.ui.comp.filterbar"
	xmlns:customData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Page id="xpage" title="{i18n>title}">
		<fb:FilterBar id="filterbar" persistencyKey="myPersKey" useToolbar="false" search=".onAvvioPress" filterChange=".restoreTable" afterVariantLoad=".onAfterVariantLoad" showClearOnFB="true" clear='.reset'>
			<fb:filterGroupItems>
				<fb:FilterGroupItem groupName="searchFields" name="title" label="{i18n>Title}" visibleInFilterBar="true">
					<fb:control>
						<SearchField width="20%" showSearchButton="false" id="titles" placeholder="Cerca qui" liveChange="onChecknumber"/>
					</fb:control>
				</fb:FilterGroupItem>
			</fb:filterGroupItems>
		</fb:FilterBar>

		<Table id="geItems" growing="true" growingThreshold="50" mode="MultiSelect" selectionChange="onRowPress" class="home_table" sticky="HeaderToolbar,ColumnHeaders"
		inset="false"
		items="{geItemsModel>/}">
			<headerToolbar>
				<OverflowToolbar class="colorRunescapeHeader">
					<content>
						<Title text="Grand Exchange Items" level="H2"/>
						
						<ToolbarSpacer/>


					</content>
				</OverflowToolbar>
			</headerToolbar>
			<columns>
				<Column
				width="12em">
					<Text text="{i18n>iconName}" />
				</Column>
				<Column
				width="12em">
					<Text text="{i18n>itemsName}" />
				</Column>
				<Column
				minScreenWidth="Tablet"
				demandPopin="true">
					<Text text="{i18n>status}" />
				</Column>
				<Column
				minScreenWidth="Desktop"
				demandPopin="true"
				hAlign="End">
					<Text text="{i18n>equip}" />
				</Column>
                <Column
				minScreenWidth="Desktop"
				demandPopin="true"
				hAlign="End">
					<Text text="{i18n>note}" />
				</Column>
			</columns>
			<items>
				<ColumnListItem vAlign="Middle" type="Navigation" press="onDetailPress" liveChange="onItemSelect">
					<cells>
						<Image
						src="{geItemsModel>icon}"/>
						<Text
						text="{geItemsModel>name}" />
						<Text
						text="{geItemsModel>members}" />
						<Text
						text="{geItemsModel>equipable}" />
                        <Text
						text="{geItemsModel>noteable}" />
					</cells>
				</ColumnListItem>
			</items>
		</Table>
	</Page>
</mvc:View>