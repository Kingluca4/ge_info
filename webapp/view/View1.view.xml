<mvc:View
    controllerName="geinfo.geinfo.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:customData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">

    <VBox class="osrsIcon">
        <Image
            id="osrs"
            src="images/rslogo.png"
            width="1000px"
            height="auto"
            style="display: block; margin: 0 auto;" />
    </VBox>

    <f:DynamicPage
        id="dynamicPage"
        headerSticky="true"
        headerPinned="true"
        fitContent="true"
        class="home_shell">

        <!-- âœ… headerTitle must be wrapped in <f:title> -->
        <f:title>
            <f:DynamicPageTitle>
                <f:content>
                    <fb:FilterBar
                        id="filterbar"
                        persistencyKey="myPersKey"
                        showFilterConfiguration="false"
                        useToolbar="false"
                        showGoOnFB="false"
                        class="home_table">
                        <fb:filterGroupItems>
                            <fb:FilterGroupItem
                                groupName="searchFields"
                                name="title"
                                label="{i18n>itemNameLabel}"
                                visibleInFilterBar="true">
                                <fb:control>
                                    <SearchField
                                        width="20%"
                                        showSearchButton="false"
                                        id="searchField"
                                        liveChange="onSearchFieldLiveChange"
                                        placeholder="{i18n>itemNameLabel}"
                                        search="onSearch" />
                                </fb:control>
                            </fb:FilterGroupItem>
                        </fb:filterGroupItems>
                    </fb:FilterBar>
                </f:content>
            </f:DynamicPageTitle>
        </f:title>

        <f:content>
            <core:HTML content='
                &lt;audio id=&quot;bgmusic&quot; loop&gt;
                    &lt;source src=&quot;audio/tradeparade.mp3&quot; type=&quot;audio/mpeg&quot;&gt;
                    Your browser does not support the audio element.
                &lt;/audio&gt;
            ' />

            <Table
                id="geItems"
                growing="true"
                growingThreshold="50"
                mode="MultiSelect"
                selectionChange="onSelectionChange"
                sticky="HeaderToolbar,ColumnHeaders"
                inset="false"
                items="{geItemsModel>/}">

                <headerToolbar class="home_table">
                    <OverflowToolbar class="colorRunescapeHeader">
                        <content>
                            <Title text="Grand Exchange Items" level="H2" />
                            <ToolbarSpacer />
                        </content>
                    </OverflowToolbar>
                </headerToolbar>

                <columns>
                    <Column hAlign="Begin">
                        <Text text="{i18n>iconName}" />
                    </Column>
                    <Column hAlign="Center">
                        <Text text="{i18n>itemsName}" />
                    </Column>
                    <Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
                        <Text text="{i18n>status}" />
                    </Column>
                    <Column minScreenWidth="Desktop" demandPopin="true" hAlign="Center">
                        <Text text="{i18n>equip}" />
                    </Column>
                    <Column minScreenWidth="Desktop" demandPopin="true" hAlign="Center">
                        <Text text="{i18n>note}" />
                    </Column>
                </columns>

                <items>
                    <ColumnListItem vAlign="Middle" type="Navigation" press="onDetailPress" class="home_table">
                        <cells>
                            <Image src="{geItemsModel>icon}" />
                            <Text text="{geItemsModel>name}" class="textColor" />
                            <Text text="{geItemsModel>members}" class="textColor" />
                            <Text text="{geItemsModel>equipable}" class="textColor" />
                            <Text text="{geItemsModel>noteable}" class="textColor" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>
